# -- Application Configuration --
PORT=3001

# -- Authentication --
# A strong, securely generated secret for signing JWTs
JWT_SECRET="your-very-strong-jwt-secret-key"
# The issuer name to validate against in JWTs
JWT_ISSUER="your-organization-issuer-name"

# -- Vector Database API --
# The HTTP endpoint for your vector search API
VECTOR_DB_API="http://localhost:8000/search"

# -- LLM Provider Configuration --
# Provider can be "openai", "gemini", or "custom"
LLM_PROVIDER="openai"
LLM_API_KEY="sk-..." # Your API key for the selected provider
MODEL_NAME="gpt-3.5-turbo" # The model identifier (e.g., "gpt-4", "gemini-pro")

# Optional: Required only if LLM_PROVIDER="custom"
# LLM_API_URL="https://your.custom.llm/api/generate"

# -- RAG Pipeline Tuning --
# Number of initial passages to fetch from the vector DB
TOP_K=8
# Number of passages to send to the LLM after reranking
FINAL_N=4

# -- Verification & Confidence --
# Semantic similarity threshold for a claim to be considered entailed by a passage
ENTAILMENT_THRESHOLD=0.88
# (Not used in this minimal implementation, but for future use)
# ABSTAIN_CONFIDENCE=0.75

# -- Auditing --
# Path to the audit log file
AUDIT_LOG_PATH="./audit.log"